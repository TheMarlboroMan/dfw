#Machine specifics.
DIR_HOME=c:/devel/repos/
DIR_OBJ=objects

DIR_LIBDAN2=$(DIR_HOME)libdansdl2/
DIR_LIBDAN2_TOOLS=$(DIR_HOME)libdansdl2-tools/
DIR_LOG=$(DIR_HOME)log
DIR_TOOLS=$(DIR_HOME)tools/

MINGW32_INCLUDE=$(DIR_HOME)../deps/mingw-w64-8-1/mingw32/include/
DIR_SDL2=$(DIR_HOME)../deps/sdl2-plus-libs/include/
SYSTEM_FLAGS=-DWINCOMPIL=1

#Commands.
CLEAN=if exist $(DIR_OBJ) rmdir $(DIR_OBJ) /S /Q && if exist libdfw.a del libdfw.a
CREATE_OBJ_DIR=	if not exist "$(DIR_OBJ)" mkdir $(DIR_OBJ)

#Build specifics.
#OPTIMIZATION=-O3
#DEBUG=-g

#Fixed compiler definitions.
CC=g++
WARNING_FLAGS=-Wno-deprecated -Wall
FLAGS_BASE=-ansi -pedantic -std=c++11 -fno-rtti
CFLAGS=-c $(DEBUG) $(OPTIMIZATION) $(FLAGS_BASE) $(WARNING_FLAGS) $(SYSTEM_FLAGS)
INCLUDES=-I $(DIR_SDL2) -I $(DIR_LIBDAN2) -I $(DIR_TOOLS) -I $(DIR_LOG) -I $(MINGW32_INCLUDE) -I $(DIR_LIBDAN2_TOOLS)

include make/common
